<!-- Informacion del Empleado -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <div class="box box-primary">
      <span class="box-header" style="background-color: AliceBlue;"></span>
      <div class="box-body no-padding">
        <div style="text-align:center; background-color: AliceBlue;  border-bottom-color: AliceBlue; border-bottom: 1px solid black;">
          <center>
          <%=image_tag @employee.image.url(:medium), :class =>"img-circle"%>
          <br>
          </center>
        </div>
      </div>
      <div class="box-body">
        <div class="col-sm-12 text-center">
          <div class="form-group">
            <h3>
              <span class="glyphicon glyphicon-user" style="font-size:70%;"></span>&nbsp&nbsp
              <%= @employee.name %>
            </h3>
            <h4>
              <span class="glyphicon glyphicon-tags" style="font-size:75%;"></span>&nbsp&nbsp
              <%= @employee.employee_id_number %>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Informacion Personal -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion Personal</h3>
    <div class="box box-primary">
      <div class="box-body">
        <div class="col-md-6">
          <h4>
            <span class="glyphicon glyphicon-tag" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Numero de Identidad:</b> <%= @employee.id_number %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-user" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Genero:</b> <%= @employee.gender %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-tint" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Tipo de Sangre:</b> <%= @employee.blood_type %>
          </h4>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-gift" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Fecha de Nacimiento:</b> <%= @employee.birth_date %>
          </h4>
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-globe" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Lugar de nacimiento:</b> <%= @employee.birth_place %>
          </h4>
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-heart-empty" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Estado Civil:</b> <%= @employee.marital_status %>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Informacion de Contacto -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion de Contacto</h3>
    <div class="box box-primary">
      <div class="box-body">
        <div class="col-md-6">
          <h4>
            <span class="glyphicon glyphicon-earphone" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Numero de Telefono:</b> <%= @employee.cellphone %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-envelope" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Correo Electronico:</b> <%= @employee.email %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-home" style="font-size:75%;"></span>&nbsp&nbsp
            <b>Direccion:</b> <%= @employee.address %>
          </h4>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-user" style="font-size:70%;"></span>&nbsp&nbsp
            <b>Numero de Contacto de Emergencia:</b> <%= @employee.emergency_contact_number %>
          </h4>
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-user" style="font-size:70%;"></span>&nbsp&nbsp
            <b>Nombre de Contacto de Emergencia:</b> <%= @employee.emergency_contact_name %>
          </h4>
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-user" style="font-size:70%;"></span>&nbsp&nbsp
            <b>Codigo Rap:</b> <%= @employee.rap_code %>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Informacion de la Empresa -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion de la Empresa</h3>
    <div class="box box-primary">
      <div class="box-body">
        <div class="col-md-6">
          <h4>
            <span class="glyphicon glyphicon-briefcase" style="font-size:75%;"></span>
            <b>Puesto Laboral:</b> <%= @employee.position.name %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-equalizer" style="font-size:75%;"></span>
            <b>Base:</b> <%= @employee.company %>
          </h4>
          <h4>
            <span class="glyphicon glyphicon-tasks" style="font-size:75%;"></span>              
            <b>Tipo de Contrato:</b> <%= @employee.contract_type %>
          </h4>
        </div>
        <!-- Segunda Columna -->
        <div class="col-md-6">
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-credit-card" style="font-size:75%;"></span>              
            <b>Numero de Cuenta Bancaria:</b> <%= @employee.bank_account %>
          </h4>
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-credit-card" style="font-size:75%;"></span>
            <b>Salario:</b> L. <%= @employee.salary %>
          </h4>
        </div>
        </div>
      </div>
    </div>
  </div>
<!-- Habilidades -->

<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Habilidades</h3>
    <div class="box box-primary">
      <div class="box-body">
      <% @employee_abilities.each do |employee_abilities| %>
        <% @_school =  School.select('name').find(employee_abilities.school_id)%>
        <% @_ability =  Ability.select('ability_name').find(employee_abilities.ability_id)%>
        <div class="col-md-6">
          <h4>
            <span class="glyphicon glyphicon-wrench" style="font-size:75%;"></span>
            <b>Institucion:</b> <%= @_school.name %>
          </h4>
          <hr size = 3>
        </div>
        <!-- Segunda Columna -->
        <div class="col-md-6">
          <h4>&nbsp&nbsp&nbsp
            <span class="glyphicon glyphicon-wrench" style="font-size:75%;"></span>
            <b>Habilidad:</b> <%= @_ability.ability_name %>
          </h4>
          <hr size = 3>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

  <!-- Educaciones -->
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Educacion Formal</h3>
      <div class="box box-primary">
        <div class="box-body">
        <% @employee_education.each do |employee_education| %>
          <% @_school =  School.select('name').find(employee_education.school_id)%>
          <% @_education = Education.select('major_description').find(employee_education.education_id)%>
          <div class="col-md-6">
            <h4>
              <span class="glyphicon glyphicon-education" style="font-size:75%;"></span>
              <b>Institucion:</b> <%= @_school.name %>
            </h4>
            <h4>
              <span class="glyphicon glyphicon-education" style="font-size:75%;"></span>
              <b>Titulo:</b> <%= employee_education.title %>
            </h4>
            <hr size = 3>
          </div>
          <!-- Segunda Columna -->
          <div class="col-md-6">
            <h4>
              <span class="glyphicon glyphicon-education" style="font-size:75%;"></span>
              <b>Descripcion de Educacion:</b> <%= @_education.major_description %>
            </h4>
            <h4>
              <span class="glyphicon glyphicon-education" style="font-size:75%;"></span>
              <% if employee_education.completed == true%>
                <b>Completo:</b> <%= "Si" %>
              <%else%>
                <b>Completo:</b> <%= "No" %>
              <% end %>
            </h4>
            <hr size = 3>
            <br>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>