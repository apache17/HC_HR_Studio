              <%= f.text_field :emergency_contact_name, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-earphone" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :emergency_contact_number, "Numero de Contacto de Emergencia" %>
              <%= f.number_field :emergency_contact_number, class: "form-control"%>
            </div>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Informacion de Empresa -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion de la Empresa</h3>
    <div class="box box-primary">
      <div class="box-body">
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-briefcase" style="font-size:75%;"></span>
              <%= f.label :position_id, "Puesto Laboral" %>
              <%= f.select(:position_id, @positions.collect{|a| [a.name, a.id]}, {include_blank: "Escoger..."}, { :class => 'form-control' })%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-equalizer" style="font-size:75%;"></span>                
              <%= f.label :company, "Base" %>
              <%= f.text_field :company, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-tasks" style="font-size:75%;"></span>
              <%= f.label :contract_type, "Tipo de Contrato" %>
              <%= f.select(:contract_type, ['Contrato Permanente', 'Contrato Temporal/Indefinido', 'Practicante'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
            </div>
          </h4>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-credit-card" style="font-size:75%;"></span>
              <%= f.label :bank_account, "Numero de Cuenta Bancaria" %>
              <%= f.number_field :bank_account, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-usd" style="font-size:75%;"></span>
              <%= f.label :salary, "Salario" %>
              <%= f.number_field :salary, step: :any ,class: "form-control"%>
            </div>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
