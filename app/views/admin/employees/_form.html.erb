<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <div class="box box-primary">
      <span class="box-header" style="background-color: AliceBlue;"></span>
      <div class="box-body no-padding">
    </div>
      <div class="box-body">
        <div class="col-sm-12 text-center">
          <div class="form-group">
            <h4>
              <div class="form-group">
                <span class="glyphicon glyphicon-picture" style="font-size:70%;"></span>&nbsp&nbsp
                <%= f.label :image, "Foto de Perfil" %>
                <%= f.file_field :image%>
              </div>      
            </h4>
            <h4>
              <div class="form-group">
                <span class="glyphicon glyphicon-user" style="font-size:70%;"></span>&nbsp&nbsp
                <%= f.label :name, "Nombre Completo" %>
                <%= f.text_field :name, class: "form-control"%>
              </div>
            </h4>
            <h4>
              <span class="glyphicon glyphicon-tags" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :employee_id_number, "Codigo de Empleado" %>
              <%= f.text_field :employee_id_number, class: "form-control"%>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Informacion Personal -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion Personal</h3>
    <div class="box box-primary">
      <div class="box-body">
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-tag" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :id_number, "Numero de Identidad" %>
              <%= f.number_field :id_number, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-user" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :gender, "Genero" %>
              <%= f.select(:gender, ['Masculino', 'Femenino', 'Otro'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-tint" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :blood_type, "Tipo de Sangre" %>
              <%= f.select(:blood_type, ['O+', 'O-', 'A+', 'A-', 'B+', 'B-', 'AB+', 'AB-'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
            </div>
          </h4>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-gift" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :birth_date, "Fecha de Nacimiento" %> 
              <%= f.date_field :birth_date, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-globe" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :birth_place, "Lugar de Nacimiento" %>
              <%= f.text_field :birth_place, class: "form-control"%>
            </div>  
          </h4>  
          <h4>
            <div class="form-group">
              <span class="glyphicon glyphicon-heart-empty" style="font-size:75%;"></span>&nbsp&nbsp
              <%= f.label :marital_status, "Estado Civil" %>
              <%= f.select(:marital_status, ['Soltero', 'Casado', 'Viudo', 'Union Libre'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
            </div>
          </h4>
        </div>                
      </div>
    </div>
  </div>
</div>
<!-- Informacion de Contacto -->
