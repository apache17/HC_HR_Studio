<!-- Informacion de Empresa -->
<div class="row">
  <div class="col-sm-8 col-xs-offset-2">
    <h3>Informacion de la Empresa</h3>
    <div class="box box-primary">
      <div class="box-body">
        <!-- Primera columna -->
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <%=raw('<i class="glyphicon glyphicon-briefcase"></i>')%>
              <%= f.label :position_id, "Puesto Laboral" %>
              <%= f.select(:position_id, @positions.collect{|a| [a.name, a.id]}, {include_blank: "Escoger..."}, { :class => 'form-control' })%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <%=raw('<i class="glyphicon glyphicon-equalizer"></i>')%>
              <%= f.label :company, "Base" %>
              <%= f.text_field :company, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <%=raw('<i class="glyphicon glyphicon-list-alt"></i>')%>
              <%= f.label :contract_type, "Tipo de Contrato" %>
              <%= f.select(:contract_type, ['Contrato Permanente', 'Contrato Temporal/Indefinido', 'Practicante'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
            </div>
          </h4>
        </div>
        <!-- Segunda columna -->
        <div class="col-md-6">
          <h4>
            <div class="form-group">
              <%=raw('<i class="glyphicon glyphicon-credit-card"></i>')%>
              <%= f.label :bank_account, "Numero de Cuenta Bancaria" %>
              <%= f.number_field :bank_account, class: "form-control"%>
            </div>
          </h4>
          <h4>
            <div class="form-group">
              <%=raw('<i class="glyphicon glyphicon-usd"></i>')%>
              <%= f.label :salary, "Salario" %>
              <%= f.number_field :salary, step: :any ,class: "form-control"%>
            </div>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
