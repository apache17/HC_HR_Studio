<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Departamentos</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Codigo</th>
                      <th>Departamento</th>
                      <th>Area</th>
                      <th class="col-xs-1">Opciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @departments.each do |department| %>
                      <tr>
                        <td><%= department.department_id_number %></td>
                        <td><%= department.name %></td>
                        <td><%= department.area.name %></td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_admin_department_url(department), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_department_url(department), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Esta seguro de borrar?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                  <tfoot>
                    <tr role="row">
                      <th>Codigo</th>
                      <th>Departamento</th>
                      <th>Area</th>
                      <th class="col-xs-1">Opciones</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'Nuevo Departamento', new_admin_department_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
