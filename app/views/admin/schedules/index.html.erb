<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Horas Extras</h3>
           <div class="dropdown pull-right">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Nuevo<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item">
                  <%= link_to 'Ingreso Manual', admin_schedules_new_path%>
                </a>
              </li>
              <li>
                <a class="dropdown-item">
                <%= link_to 'Subir Archivo', admin_schedules_show_path%> 
                </a>
              </li>
            </ul>
          </div>
        </div>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th width="10%">Fecha</th>
                      <th width="15%">Hora de Entrada</th>
                      <th width="15%">Hora de Salida</th>
                      <th width="10%">Nombre de Empleado</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @schedules.each do |schedule| %>
                      <tr>
                        <td> <%= schedule.fecha %> </td>
                        <td> <%= schedule.hora_entrada%> </td>
                        <td> <%= schedule.hora_salida%> </td>
                        <td> <%= schedule.employees%> </td>
                      </tr>
                    <% end %>
                  </tbody>
                  

                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

