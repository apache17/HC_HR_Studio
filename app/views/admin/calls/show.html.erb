<div class="row">
  <div class="col-sm-12">
    <div class="box box-primary">
      <div class="box-header with-border">
          <h3 class="box-title">Convocatoria</h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
              <div class="form-group">
                <h4>
                  <b><%= "CÃ³digo de la Convocatoria: " %></b>
                  <%= @call.id %>
                </h4>
              </div>
              <div class="form-group">
                <h4>
                  <b><%= "Tipo de Convocatoria: " %></b>
                  <%= @call.category%>
                </h4>
              </div>
              <div class="form-group">
                <h4>
                  <b><%= "Tema: " %></b>
                  <%= @call.topic%>
                </h4>
              </div>
              <div class="form-group">
                <h4>
                  <b><%= "Lugar: " %></b>
                  <%= @call.place%>
                </h4>
              </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
            <h4>
                <b><%= "Habilidad Adquirida: " %></b>
                <%= @call.ability.ability_name %>
            </h4>
            </div>
            <div class="form-group">
            <h4>
                <b><%= "Fecha: " %></b>
                <%= @call.date%>
            </h4>
            </div>
            <div class="form-group">
            <h4>
                <b><%= "Hora de Inicio: " %></b>
                <%= @call.start_time%>
            </h4>
            </div>
            <div class="form-group">
            <h4>
                <b><%= "Hora de Fin: " %></b>
                <%= @call.end_time%>
            </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <h3>Instructores</h3>
    <div class="box box-primary">
      <div class="box-body">
        <% if @call_instructors != nil %>  
          <% @call_instructors.each do |call_instructors| %>
          <% @i_name =  Instructor.select('name').find(call_instructors.instructor_id)%>
            <!-- Primera Columna -->
            <div class="col-md-12">
              <div class="row">
                <h4>
                  <%=@i_name.name%>
                </h4>
              </div>
              <hr size = 3>
            </div>
            <%end%>
          <%end%>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Participantes</h3>
    <div class="box box-primary">
      <div class="box-body">
        <% if @call_employees != nil %>  
          <% @call_employees.each do |call_employees| %>
          <% @p_name =  Employee.select('name').find(call_employees.employee_id)%>
            <!-- Primera Columna -->
            <div class="col-md-12">
              <div class="row">
                <h4>
                  <%=@p_name.name%>
                </h4>
              </div>
              <hr size = 3>
            </div>
            <%end%>
          <%end%>
      </div>
    </div>
  </div>
</div>
<div class="input-group-btn" align="center">
    <%= link_to "Regresar", admin_calls_path, class: "btn bg-red btn-flat" %>