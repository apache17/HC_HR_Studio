<div class="row">
  <div class="col-sm-12">
    <div class="box box-primary">
      <div class="box-header with-border">
          <h3 class="box-title">Perfil de Puesto</h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
              <div class="form-group">
                <h4>
                  <b><%= "Código de la Posición: " %></b>
                  <%= @position.position_id_number %>
                </h4>
              </div>
              <div class="form-group">
                <h4>
                  <b><%= "Nombre de la Posición" %></b>
                  <%= @position.name%>
                </h4>
              </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
                <% @department_name =  Department.select('name').find(@position.department_id)%>
              <h4>
                <b><%= "Departamento: " %></b>
                <%= @department_name.name %>
              </h4>
              <h4>
                <b><%= "Descripción de la Posición " %></b>
                <%= @position.description %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Habilidades</h3>
    <div class="box box-primary">
      <div class="box-body">
        <% @position_abilities.each do |position_abilities| %>
        <% @ability_name =  Ability.select('ability_name').find(position_abilities.ability_id)%>
          <!-- Primera Columna -->
          <div class="col-md-12">
            <div class="row">
              <h4>
                <%=@ability_name.ability_name%>
              </h4>
            </div>
            <hr size = 3>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
      <h3>Educacion Formal</h3>
      <div class="box box-primary">
        <div class="box-body">
          <% @position_educations.each do |position_education| %>
          <% @education_name =  Education.select('major_description').find(position_education.education_id)%>
            <!-- Primera Columna -->
            <div class="col-md-4">
              <div class="row">
                <h4>
                  <%=position_education.title%>
                </h4>
              </div>
              <hr size = 3>
            </div>
            <div class="col-md-7">
              <div class="row">
                <h4>
                  <%=@education_name.major_description%>
                </h4>
              </div>
              <hr size = 3>
            </div>
            <div class="col-md-1">
              <div class="row">
                <h4>
                  <% if position_education.completed == true %>
                    <%= "Si" %>
                  <% else %>
                    <%= "No" %>
                  <% end %>
                </h4>
              </div>
              <hr size = 3>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <div class="input-group-btn" align="center">
  <%= link_to "Regresar", admin_positions_path, class: "btn bg-red btn-flat" %>