<div class="col-md-6">
    <div class="form-group">
        <%= f.label :position_id_number, "Codigo de la Posicion" %>
        <%= f.text_field :position_id_number, class: "form-control"%>
    </div>
    <div class="form-group">
        <%= f.label :name, "Nombre de la Posicion" %>
        <%= f.text_field :name, class: "form-control"%>
    </div>
</div>

<div class="col-md-6">
  <div class="form-group">
    <%= f.label :department_id, "Departamento" %>
    <%= f.select(:department_id, @departments.collect{|a| [a.name, a.id]}, {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
  </div>
</div>