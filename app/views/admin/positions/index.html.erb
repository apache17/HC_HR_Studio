<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Posiciones</h3>
          <%= link_to 'Nueva Posición', new_admin_position_path, class: 'btn btn-success pull-right' %>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Código</th>
                      <th>Posición</th>
                      <th>Departamento</th>
                      <th class="col-xs-2">Opciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @positions.each do |position| %>
                      <tr>
                      <td> <%= position.position_id_number %> </td>
                      <td> <%= position.name %> </td>
                      <td> <%= position.department.name %> </td>
                        <td>
                          <div class="btn-row" align = "center">
                            <%= link_to raw('<i class="fa fa-cogs"></i> Editar'), edit_admin_position_url(position), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_position_url(position), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Esta seguro de borrar?' } %>
                            <%= link_to raw('<i class="fa fa-user"></i> Ver'), admin_position_url(position), class: 'btn btn-sm btn-primary' %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>


                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>


