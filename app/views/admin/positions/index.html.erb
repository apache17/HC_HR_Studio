<div class="row">
  <div class="col-sm-12">
    <h3>Lista de Posiciones</h3>
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Lista de Posiciones</h3>
        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 90px;">
            <%= link_to "Agregar Posicion".html_safe, new_admin_position_path, :class => "btn btn-block btn-success btn-sm" %>
          </div>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th>Codigo</th>
            <th>Posicion</th>
            <th>Departamento</th>
            <th></th>
          </tr>
          <tbody>
            <%- @positions.each do |f| %>
              <% unless f.name.blank? %>
              <tr>
                <td><%= f.position_id_number %></td>
                <td><%= f.name %></td>
                <td><%= f.department.name %></td>
                <td align="right" style="width: 200px">
                  <div class="input-group input-group-xs">
                    <%= link_to edit_admin_position_path(f.id, f), class: "btn bg-blue btn-flat btn-sm" do %>
                      <i class="fa fa-pencil"></i> Editar
                    <% end %>
                    <%= link_to "Eliminar", admin_position_url(f), class: 'btn bg-red btn-flat btn-sm', method: :delete,
                        data: { confirm: 'Estas Seguro?' } %>
                  </div>
                </td>
              </tr>
              <%end%>
            <%-end%>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
