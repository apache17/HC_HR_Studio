<div class="row">
  <div class="col-sm-12">
      <div class="box box-primary">
          <div class="box-header with-border">
              <h3 class="box-title">Area</h3>
          </div>
          <div class="box-body">
              <div class="row">
                  <%= form_for @area, url: @url do |f| %>
                  <%= render partial: "form", locals: {f: f} %>
              </div>
              <div class="input-group-btn">
                  <%= link_to "Cancelar", admin_areas_path, class: "btn bg-red btn-flat" %>
                  <%= f.submit "Editar", class: "btn bg-green btn-flat" %>
              </div>
              <%end%>
          </div>
      </div>
  </div>
</div>
