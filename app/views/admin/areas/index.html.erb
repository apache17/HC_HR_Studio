<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Lista de Áreas</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th width="300">Código</th>
                      <th width="500">Área</th>
                      <th width="15%">Opciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @areas.each do |area| %>
                      <% unless area.name.blank? %>
                      <tr>
                        <td> <%= area.area_id_number%> </td>
                        <td> <%= area.name %> </td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i> Editar'), edit_admin_area_url(area), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_area_url(area), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Esta seguro de borrar?' } %>
                          </div>
                        </td>
                      </tr>
                      <% end %>
                    <% end %>
                  </tbody>

                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'Nueva Área', new_admin_area_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
